//User function template for C++
class Solution{
public:	
	
	
	int isPalindrome(string S)
	{
	    int n;
        n=S.size();
        int a=n;
        int flag =1;
        for(int i=0;i<n/2;i++)
        {
            if(S[i]!=S[a-1])
            {
                return 0;
                flag =0;
                break;
            }
            a--;
            
        }
        if(flag==1)
            {
                return 1;
            }
        
	}

};
