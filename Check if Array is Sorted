// User function template for C++

class Solution {
  public:
    bool arraySortedOrNot(int arr[], int n) {
        // code here
        bool flag = 1;
        for(int i=0;i<n-1;i++)
        {
                if(arr[i]>arr[i+1])
                {
                    flag =0;
                    break;
                }
        }
        if(flag==1)
        {
            return 1;
        }
        else 
        return 0;
    }
};
